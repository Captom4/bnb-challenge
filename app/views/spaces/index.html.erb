<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price per night</th>
      <th>Available from</th>
      <th>Available to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.description %></td>
        <td><%= space.price_per_night %></td>
        <td><%= space.available_from %></td>
        <td><%= space.available_to %></td>
        <td><%= link_to 'Show', space %></td>
        <% if(is_owner?(space.user)) %>
          <td><%= link_to 'Edit', edit_space_path(space) %></td>
          <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_space_path %>
